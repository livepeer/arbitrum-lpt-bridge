{
  "name": "arbitrum-lpt-bridge",
  "version": "1.0.0",
  "description": "A bridge to move LPT between Ethereum and Arbitrum",
  "scripts": {
    "prepare": "husky install",
    "deploy": "npx hardhat deploy",
    "lint": "yarn eslint && yarn solhint",
    "eslint:fix": "eslint . --ext .ts --fix",
    "eslint": "eslint . --ext .ts",
    "solhint": "npx solhint 'contracts/**/*.sol'",
    "prettier:sol": "prettier --write 'contracts/**/*.sol'",
    "prettier:ts": "prettier-eslint --write 'test/**/*.ts' 'scripts/**/*.ts'",
    "prettier": "yarn prettier:sol && yarn prettier:ts",
    "clean": "rm -rf cache artifacts typechain",
    "compile": "npx hardhat compile",
    "test:coverage": "npx hardhat coverage",
    "test": "npx hardhat test",
    "test:unit": "npx hardhat test test/unit/*.*",
    "test:integration": "npx hardhat test test/integration/**",
    "test:gas": "REPORT_GAS=true npx hardhat test test/gas-report/*",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/livepeer/arbitrum-lpt-bridge.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/livepeer/arbitrum-lpt-bridge/issues"
  },
  "homepage": "https://github.com/livepeer/arbitrum-lpt-bridge#readme",
  "devDependencies": {
    "@defi-wonderland/smock": "^2.0.7",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "arb-ts": "^1.0.2",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.7",
    "hardhat-deploy": "^0.9.4",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.4",
    "prettier": "^2.4.1",
    "prettier-eslint-cli": "^5.0.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4"
  }
}
